let g:black_virtualenv = '/home/cam/neovim3/'

function! FormatBuffer()
  if &filetype ==# 'rust' || &filetype ==# 'c' || &filetype ==# 'ocaml'
    if has("nvim")
      execute "silent! Neoformat"
    else
      execute "silent! Autoformat"
    endif
  endif
  if &filetype ==# 'python'
    execute "Black"
  endif
endfunction

au BufWritePre * call FormatBuffer()

